<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:padding="2dp"
        android:background="@drawable/listing_single_row_background">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/listing_single_row_iv_listingImg"
                android:layout_width="85dp"
                android:layout_height="75dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/listing_single_row_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textStyle="italic"
                android:textColor="@color/greyText"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/listing_single_row_tv_listingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listing_title"
                android:textColor="@color/greyText"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

                <Button
                    android:id="@+id/listing_single_row_btn_remove"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:text="Remove"
                    android:textSize="8sp"/>

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <TextView
                    android:id="@+id/listing_single_row_tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textStyle="italic"
                    android:textColor="@color/greyText"
                    android:textSize="14sp"
                    android:layout_marginLeft="2dp"/>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>